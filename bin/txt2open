#!/bin/bash
#
# txt2pdf
#
# Andrew DeOrio <awdeorio@umich.edu>
#
# Convert plain text to pdf in a tmpdir and open it

# Stop on errors
set -Eeuo pipefail

# Check arguments
if [ "$#" != 1 ]; then
  echo "Usage: $0 [FILE]"
  exit 1
fi
TXTFILE="$1"

# Check input file - enscript will exit zero even if input does does not exist
if [ ! -f "$TXTFILE" ]; then
    echo "Error: file does not exist $TXTFILE"
    exit 1
fi

# Create tempfile for pdf
TMPBASE=`basename $0`
TMPFILE=`gmktemp /tmp/${TMPBASE}.XXXXXX --suffix .pdf`

# Echo commands
set -x

# Convert
enscript --quiet "$TXTFILE" -o - | ps2pdf - "$TMPFILE"

# Open
open "$TMPFILE"
